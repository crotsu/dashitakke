<h1>学生 提出用画面</h1>

<table class="table table-border">
  <thead>
    <tr>
      <th>課題番号</th>
      <th>出題日</th>
      <th>設問数</th>
      <th>未完了設問数</th>
      <th>現時点での課題提出の達成度</th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= link_to '第' + assignment.paper.index.to_s + '回', {action: :show, id: assignment.id} %></td>
        <td><%= simple_date(assignment.paper.given_date)%></td>
        <td><span class="badge"><%= assignment.paper.questions.length %></span></td>
        <td><span class="badge"><%= assignment.undone_answers.length %></span></td>
        <td>
         <div class="progress">
          <div class="progress-bar" role="progressbar" data-transitiongoal="<%= assignment.progress.to_s %>">
          </div>
        </div>
        </td>
        </tr>
    <% end %>
  </tbody>
</table>

<script>
  $('.progress .progress-bar').progressbar();
  $(document).ready(function() {
    $('.progress .progress-bar').progressbar({display_text: 'fill'});
  });
</script>